<form>
<div class="form-group">
  <label>User Name</label>
  {{input type="text" class="form-control" value=login.userName placeholder="User Name"}}
</div>
<div class="form-group">
  <label>Password</label>
  {{input type="password" class="form-control" value=login.password placeholder="Password"}}
</div>

<select id="category" required onchange={{action 'assignCategory' value='target.value'}}>
  <option selected value="">--Select a Category--</option>
  <option value="student">Student</option>
  <option value="staff">Staff</option>
</select>



<submit {{action 'buttonLogin'}} class="btn btn-primary">Login</submit>
</form>
{{outlet}}
